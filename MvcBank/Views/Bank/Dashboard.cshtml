@model MvcBank.Models.User

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hello: @Model.CardNumber</h2>

<div class="col-lg-12" style="padding-top: 20px; padding-bottom: 20px;  text-align: center">
    @Html.ActionLink("Check Balance", "CheckBalance", "Bank", null, new { @class = "btn btn-primary" })
</div>

<div class="col-lg-12" style="padding-top: 20px; padding-bottom: 20px;  text-align: center">
    @Html.ActionLink("Withdraw", "Withdraw", "Bank", null, new { @class = "btn btn-primary" })
</div>

<div class="col-lg-12" style="padding-top: 20px; padding-bottom: 20px;  text-align: center">
    @Html.ActionLink("Transaction History", "TransactionDetails", "Bank", null, new { @class = "btn btn-primary" })
</div>

<hr />

<div class="col-lg-12" style="text-align: center">
    <pre>To exit please click on Log out button</pre>
</div>


<div class="col-lg-12" style="padding-top: 20px; padding-bottom: 20px;  text-align: right">
    @Html.ActionLink("Log out", "Logout", "Bank", null, new { @class = "btn btn-primary" })
</div>