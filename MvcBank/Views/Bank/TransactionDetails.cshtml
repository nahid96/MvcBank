@model IEnumerable<MvcBank.Models.TransactionHistory>

@{
    ViewBag.Title = "TransactionDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Your Transaction Amount List:</h3>

<ul>
    @foreach (var amount in Model)
    {
        <li>@amount.TransactionAmount Tk.</li>
    }
</ul>

@Html.ActionLink("Back to Dashboard", "Dashboard", "Bank", null, new { @class = "btn btn-primary" })

<br />
<br />

<div class="col-lg-12" style="text-align: center">
    <pre>To exit please click on Log out button</pre>
</div>

<div class="col-lg-12" style="padding-top: 20px; padding-bottom: 20px;  text-align: right">
    @Html.ActionLink("Log out", "Logout", "Bank", null, new { @class = "btn btn-primary" })
</div>

