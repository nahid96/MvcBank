@model MvcBank.Models.User
@{
    ViewBag.Title = "WithdrawPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hello: @Model.CardNumber</h2>

@using (Html.BeginForm("WithdrawPost", "Bank"))
{
    <pre>To cash out please enter balance</pre>

    <div class="form-group">
        @Html.LabelFor(b => b.Balance)
        @Html.TextBoxFor(b => b.Balance, new { @class = "form-control" })
    </div>
    
    <button type="submit" class="btn btn-primary">Cash Out</button>
}

<br />
<br />

@Html.ActionLink("Back to Dashboard", "Dashboard", "Bank", null, new { @class = "btn btn-primary" })

<br />
<br />

<div class="col-lg-12" style="text-align: center">
    <pre>To exit please click on Log out button</pre>
</div>

<div class="col-lg-12" style="padding-top: 20px; padding-bottom: 20px;  text-align: right">
    @Html.ActionLink("Log out", "Logout", "Bank", null, new { @class = "btn btn-primary" })
</div>